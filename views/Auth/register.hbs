<div class="login">
    <form action="/user/register" method="post" name="form1">
    <div class="form-group">
        <label for="exampleInputEmail1">Name</label>
        <input type="name" name="name" class="form-control" id="name" aria-describedby="nameHelp" placeholder="Enter name" value="">
    </div>
    <div class="form-group">
        <label for="exampleInputEmail1">Email</label>
        <input type="email" name="email" class="form-control" id="email" aria-describedby="emailHelp" placeholder="Enter email" value="">
    </div>
    <div class="form-group">
        <label for="exampleInputEmail1">Password</label>
        <input type="password" name="password" class="form-control" id="password" aria-describedby="emailHelp" placeholder="*********" value="">
    </div>
    <input type="submit" class="btn btn-primary log-btn" value="REGISTER">
    <a href="auth/login" class="btn btn-success ml-2 register">Login here</a>
    </form>
</div>
<style>
    .login{
        width: 32rem;
        margin: 4rem auto;
        padding: 2rem;
        border: 2px solid rgb(72, 195, 211);
        border-radius: 8px;
    }
    .log-btn{
        margin-top: .5rem;
        width: 16rem;
        box-sizing: border-box;
    }
    .register{
        margin-top: .5rem;
        width: 11rem;
        box-sizing: border-box;
        float: right;
    }
</style>
